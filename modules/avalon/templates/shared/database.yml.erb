<%= @rails_env %>:
  adapter: mysql2
  encoding: utf8
  reconnect: true
  database: <%= scope.lookupvar('avalon::mysql::database') %>
  username: <%= scope.lookupvar('avalon::mysql::username') %>
  password: <%= scope.lookupvar('avalon::mysql::password') %>
  host:     <%= scope.lookupvar('avalon::mysql::hostname') %>
